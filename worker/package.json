{
	"name": "worker",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "npm -w admin run build && node scripts/build-admin.js",
		"assets:embed": "node scripts/build-admin.js",
		"deploy": "npm run build && wrangler deploy",
		"dev": "npm run build && wrangler dev",
		"dev:fast": "wrangler dev",
		"dev:ai": "wrangler dev --port 8787",
		"start": "wrangler dev",
		"tail": "wrangler tail",
		"test": "vitest run",
		"test:watch": "vitest",
		"db:apply:local": "wrangler d1 execute mack-link --local --file src/schema.sql",
		"db:apply": "wrangler d1 execute mack-link --file src/schema.sql",
		"clean": "rm -rf node_modules .wrangler"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.10.3",
		"vitest": "^3.2.0",
		"wrangler": "^4.33.2"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "4.50.0"
	}
}
